%h2  
  = "#{@todos.count} tasks were updated this week" 

.divider

- @todos.select{|x| x.worklog_entries.count > 0 }.each do |todo|
  %table.table
    %thead
      %tr
        %th #{todo.name}
    %tbody      
      - todo.worklog_entries(:date_performed.gt => @last_week).each do |entry|    
        %tr
          %td #{entry.date_performed.strftime("%Y/%m/%d")}
          %td #{entry.content}
          %td #{entry.work_type.name}




